@model TachoReaderLicensingWebsite.DataModel.Models.MainViewModel

@{
    ViewBag.Title = "Skillray";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row-fluid">
        <div class="span4">
            <img class="logo" src="~/Content/images/skillray-logo.png" />
        </div>

        <div class="offset6 span2" style="margin-top: 40px;"><a class="btn btn-danger pull-right" href="~/Home/Logout">Logout</a></div>

    </div>
    <div class="row-fluid" style="margin:14px 0px;">
        <div class="span9">
            <div class="input-append input-block-level">
                <input type="text" id="appendInputButtons" class="search-large" placeholder="Search Clients" style="border-color:#888;">
                <button class="btn" type="button" style="height: 47px;border-color:#888;"><i class="icon-search"></i></button>

            </div>
        </div>
        <div class="span2 offset1">
            <input type="button" id="mainAdd" class="btn-large btn-danger pull-right" value="New Client" />
        </div>
    </div>
    <div class="row-fluid" style="min-height: 650px;">
        <div class="span6 mainBoxArea">
            <div id="Clients">
                <div class="row-fluid">
                    <div class="span12">
                        <h3>Clients</h3>
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="span12" id="ClientListPlaceholder">
                       @Html.Partial("_ClientList", Model.Customers)
                    </div>
                </div>
            </div>
        </div>
        <div class="span6">

            <div id="clientDetails" class="row-fluid">
                <div class="span12 mainBoxArea">
                    <div class="row-fluid">
                        <div class="span12">
                            <h3>Add 
                                Client</h3>
                        </div>
                    </div>
                    @using (Html.BeginForm())
                    {
                        <div class="row-fluid">
                            <div class="span4">
                                <label for="companyName">Name (Max 50 characters)</label>
                            </div>
                            <div class="span8">
                                <input type="text" id="Name" name="Name" class="input-block-level" />
                            </div>
                        </div>
                        <div class="row-fluid">
                            <div class="offset10 span2">
                                @Html.AntiForgeryToken()
                                <input type="hidden" id="ID" name="ID" value="00000000-0000-0000-0000-000000000000" />
                                <input type="submit" class="btn btn-danger pull-right" value="Add+" />
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div id="licenceList" class="row-fluid" style="margin-top: 20px; display: none;">
                <div class="span12 mainBoxArea">
                    <div class="row-fluid">
                        <div class="span12">
                            <h3>Client Licences</h3>
                        </div>
                    </div>
                    <div class="row-fluid" id="licenceListPlaceholder">
                        @Html.Partial("_LicenceList", new List<TachoReaderLicensingWebsite.DataModel.Licence>())
                    </div>
                    <div class="row-fluid">

                        <a href="#myModal" role="button" class="btn btn-danger pull-right" data-toggle="modal">Add +</a>

                    </div>
                    @* MODAL BOX *@

                    <div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                        <div class="modal-header"></div>
                        <div class="modal-body"><div class="span7"><label for="dp1" >Expiry Date</label></div>
                            <input class="span5 datepicker" type="text" size="16" id="dp1" placeholder="dd/mm/yyyy">
                        </div>
                        <div class="modal-footer">
                            <input type="button" id="licenceAdd" class="btn btn-danger pull-right" value="Add +" />
                        </div>
                    </div>
                    @* MODAL BOX END *@

                </div>
            </div>

        </div>
    </div>

</div>
