<core:BaseModalWindow x:Class="Webcal.Windows.ProgressWindow.ProgressWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:behav="clr-namespace:Webcal.Behaviours"
                      xmlns:vm="clr-namespace:Webcal.Windows.ProgressWindow"
                      xmlns:core="clr-namespace:Webcal.Core"
                      Height="125"
                      Width="350"
                      WindowStartupLocation="CenterScreen"
                      WindowStyle="ToolWindow"
                      ShowInTaskbar="False"
                      ResizeMode="NoResize"
                      behav:WindowBehavior.HideCloseButton="True">
    <core:BaseModalWindow.DataContext>
        <vm:ProgressWindowViewModel />
    </core:BaseModalWindow.DataContext>
    <StackPanel>
        <TextBlock Text="{Binding ProgressText}"
                   Margin="20,20,20,0"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center" />
        <ProgressBar IsIndeterminate="True"
                     Height="20"
                     Margin="20" />
    </StackPanel>
</core:BaseModalWindow>
