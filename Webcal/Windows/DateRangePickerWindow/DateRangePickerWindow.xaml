<Window x:Class="Webcal.Windows.DateRangePickerWindow.DateRangePickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ctrls="clr-namespace:Webcal.Controls"
        xmlns:vm="clr-namespace:Webcal.Windows.DateRangePickerWindow"
        Title="Select Date Range"
        Height="180"
        Width="425"
        Icon="../../Main Icon.ico"
        WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <vm:DateRangePickerWindowViewModel />
    </Window.DataContext>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="35" />
            <RowDefinition Height="35" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <ctrls:InputDatePickerField SelectedDate="{Binding StartDateTime}"
                                    Label="Start:"/>

        <ctrls:InputDatePickerField SelectedDate="{Binding EndDateTime}"
                                    Label="End:" 
                                    Grid.Row="1"
                                    Margin="0,5,0,0"/>
        
        <StackPanel Orientation="Horizontal"
                    Grid.Row="2"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <Button Content="Select"
                    Command="{Binding SelectCommand}" 
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}}"/>
            <Button Content="Cancel"
                    Command="{Binding CancelCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}}"/>
        </StackPanel>
    </Grid>
</Window>
